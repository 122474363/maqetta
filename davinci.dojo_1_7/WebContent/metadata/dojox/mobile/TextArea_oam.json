{
    "id": "http://dojotoolkit.org/dojox/mobile/TextArea",
    "name": "dojox.mobile.TextArea",
    "spec": "1.0",
    "version": "1.7",
    "require": [
        {
            "type": "javascript",
            "src": "../dojox/mobile.js",
            "module": "amd",
            "$library": "dojo"
        },
        {
            "type": "javascript",
            "src": "../dojox/mobile/parser.js",
            "module": "amd",
            "$library": "dojo"
        },
        {
            "type": "javascript",
            "src": "../dojox/mobile/deviceTheme.js",
            "module": "amd",
            "$library": "dojo"
        },
        {
            "type": "javascript",
            "src": "../dojox/mobile/compat.js",
            "module": "amd",
            "$library": "dojo"
        },
        {
            "type": "javascript",
            "src": "../dojox/mobile/TextArea.js",
            "module": "amd",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "name": {
            "datatype": "string"
        },
        "alt": {
            "datatype": "string"
        },
        "value": {
            "datatype": "string"
        },
        "tabIndex": {
            "datatype": "number",
            "defaultValue": 0
        },
        "disabled": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "intermediateChanges": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "scrollOnFocus": {
            "datatype": "boolean",
            "defaultValue": true
        },
        "readOnly": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "trim": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "uppercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "lowercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "propercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "maxLength": {
            "datatype": "string"
        },
        "selectOnClick": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "placeHolder": {
            "datatype": "string"
        },
        "baseClass": {
            "datatype": "string",
            "defaultValue": "mblTextArea"
        }
    },
    "content": "<textarea></textarea>"
}