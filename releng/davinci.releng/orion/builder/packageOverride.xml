<project name="package.override" default="main" >

	<import file="${buildDirectory}/${assembleScriptName}" as="super" />
	
	<target name="main" >
		<antcall target="super.main" />
	</target>
	
	<!-- bug 335723 -->
    <target name="cleanup.assembly">
    	
    	<echo message="setting +x on maqetta launch scripts"/>
    	<property name="assemblyTempDir" value="${buildDirectory}/tmp"/>
    		<mkdir dir ="${assemblyTempDir}"/>
    		<unzip dest="${assemblyTempDir}" src="${archiveFullPath}" />
    	<zip destfile="maqetta-${archiveFullPath}" filesonly="false" >
    		<zipfileset dir="${assemblyTempDir}/eclipse" includes="**/**" excludes="*.command,*.sh"/>
    		<zipfileset dir="${assemblyTempDir}/eclipse" includes="*.command" filemode="755" />
    		<zipfileset dir="${assemblyTempDir}/eclipse" includes="*.sh" filemode="755" />
    	</zip>
    	<delete dir ="${assemblyTempDir}"/>
    	<delete file="${archiveFullPath}" />
    	
    	
    	<exec executable="mv" dir="${buildDirectory}" >
			<arg value="${assemblyTempDir}" />
    		<arg value="${buildDirectory}/tmp.${os}.${ws}.${arch}" />
		</exec>
		<exec executable="rm" dir="${buildDirectory}" >
			<arg line="-rf ${buildDirectory}/tmp.${os}.${ws}.${arch}" />
		</exec>
    </target>	
</project>