{
    "id": "http://dojotoolkit.org/dojox/form/FileInputAuto",
    "name": "dojox.form.FileInputAuto",
    "spec": "1.0",
    "version": "1.0",
    "require": [
        {
            "type": "css",
            "src": "dojox/form/resources/FileInput.css",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/form/FileInputAuto",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "type": {
            "datatype": "string",
            "defaultValue": "text",
            "hidden": true
        },
        "name": {
            "datatype": "string",
            "defaultValue": "uploadFile",
            "title": "Name"
        },
        "alt": {
            "datatype": "string",
            "hidden": true
        },
        "value": {
            "datatype": "string",
            "title": "Value"
        },
        "tabIndex": {
            "datatype": "string",
            "defaultValue": "0",
            "title": "Tab Index"
        },
        "disabled": {
            "datatype": "boolean",
            "title": "Disabled"
        },
        "readOnly": {
            "datatype": "boolean",
            "hidden": true
        },
        "intermediateChanges": {
            "datatype": "boolean",
            "hidden": true
        },
        "label": {
            "datatype": "string",
            "defaultValue": "Browse ...",
            "title": "Label"
        },
        "cancelText": {
            "datatype": "string",
            "defaultValue": "Cancel",
            "title": "Cancel Text"
        },
        "url": {
            "datatype": "string",
            "format": "url",
            "title": "URL"
        },
        "blurDelay": {
            "datatype": "number",
            "defaultValue": 2000,
            "title": "Blur Delay"
        },
        "duration": {
            "datatype": "number",
            "defaultValue": 500,
            "title": "Duration"
        },
        "uploadMessage": {
            "datatype": "string",
            "defaultValue": "Uploading ...",
            "title": "Upload Message"
        },
        "triggerEvent": {
            "datatype": "string",
            "description": "Event which triggers the upload. Defaults to onblur, sending the file selected\n'blurDelay' milliseconds after losing focus. Set to \"onchange\" with a low blurDelay\nto send files immediately after uploading.",
            "hidden": false,
            "defaultValue": "onblur"
        },
        "scrollOnFocus": {
            "datatype": "boolean",
            "description": "On focus, should this widget scroll into view?",
            "hidden": false
        }
    },
    "content": "<input></input>",
    "title": {
        "type": "text/html",
        "value": "<p>A widget to transfer values through source and target Wires</p>"
    },
    "description": {
        "type": "text/html",
        "value": "<p>This widget represents a controller task to transfer a value from\na source to a target, through a source and a target Wires, when\nan event (a function) or a topic is issued.\nIf this widget has child ChildWire widgets, their _addWire()\nmethods are called to add Wire arguments to a source or a target\nWire.</p>"
    }
}