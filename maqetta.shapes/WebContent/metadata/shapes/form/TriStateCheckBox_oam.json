{
    "id": "http://www.ibm.com/oneui/form/TriStateCheckBox",
    "name": "oneui.form.TriStateCheckBox",
    "spec": "1.0",
    "version": "1.0",
    "require": [
        {
            "type": "css",
            "src": "dojo/resources/dojo.css",
            "$library": "dojo"
        },
        {
            "type": "css",
            "src": "themes/oneui/oneui.css",
            "$library": "oneui"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "oneui/form/TriStateCheckBox",
            "$library": "oneui"
        }
    ],
    "library": {
        "oneui": {
            "src": "../../../oneui"
        },
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "name": {
            "datatype": "string",
            "title": "Name"
        },
        "tabIndex": {
            "datatype": "string",
            "defaultValue": "0",
            "title": "Tab Index"
        },
        "disabled": {
            "datatype": "boolean",
            "title": "Disabled"
        },
        "readOnly": {
            "datatype": "boolean",
            "title": "Read Only"
        },
        "label": {
            "datatype": "string",
            "defaultValue": "test label:",
            "title": "Label"
        },
        "state": {
            "datatype": "string",
            "option": [
                {
                    "value": ""
                },
                {
                    "value": "Error"
                }
            ],
            "defaultValue": "",
            "title": "State"
        },
        "checked": {
        	"datatype": "string",
        	"option": [
        		{
        			"value": "true"
        		},
        		{
        			"value": "mixed"
        		},
        		{
        			"value": "false"
        		}
        	],
        	"defaultValue": "false",
        	"title": "Checked"
        },
        "states": {
        	"datatype": "array",
        	"defaultValue": ["false", "mixed", "true"],
        	"title": "States"
        }
    },
    "content": "<input></input>"
}